<form action="/users/{{user._id}}/edit" method="post">
  <legend>Edit Profile</legend>

  <div class="form-group">
    <label for="user-name">Name and Surname</label>
    <input type="name" name="name" value="{{user.name}}" class="form-control" id="user-name" placeholder="Name and Surname" maxlength="35">
  </div>

  <div class="form-group">
    <label for="user-age">Age</label>
    <input type="number" name="age" value="{{user.age}}" valclass="form-control" id="user-age" placeholder="Age (years)" min="0" max="50">
  </div>

  <div class="form-group">
    <label for="user-gender">Gender</label>
    <input type="text" name="gender" value="{{user.gender}}" class="form-control" id="user-gender" placeholder="Gender (M or F)">
  </div>

  <div class="form-group">
    <label for="user-hometown">Hometown (City, State, Country)</label>
    <input type="text" name="hometown" value="{{user.hometown}}" class="form-control" id="user-hometown" placeholder="Hometown (City, State, Country)" maxlength="150">
  </div>

  <div class="form-group">
    <label for="user-height">Height (ft.in)</label>
    <input type="number" name="height" value="{{user.height}}" class="form-control" id="user-height" placeholder="Height (ft.in)" min="0" max="9" step="0.1">
  </div>

  <div class="form-group">
    <label for="user-weight">Weight (lbs)</label>
    <input type="number" name="weight" value="{{user.weight}}"class="form-control" id="user-weight" placeholder="Weight (lbs)" min="0" max="300">
  </div>

  <div class="text-right">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>
